<fieldset class="my-fieldset">
  <legend class="my-fieldset"><%= proposal_rec_info(proposal) %></legend>

  <%#= render partial: "show_step1", locals: {partial_data: proposal} %>
  <%#= render partial: "show_step2", locals: {partial_data: proposal} %>
  <%#= render partial: "show_step3", locals: {partial_data: proposal} %>
  <%= render partial: "show_step4", locals: {partial_data: proposal} %>
  <%#= render partial: "show_step5", locals: {partial_data: proposal} %>

  <hr class="hr-without-top-margin">

  <div class="row">
    <div class="col-sm-7">

      <% if policy(proposal).show_self? %>
        <%= link_to proposal_path(proposal), class: "btn btn-primary" do %>
          <span class="glyphicon glyphicon-eye-open"></span>
          <%= t("helpers.links.show") %>
        <% end %>
      <% end %>

    </div> <!-- /col-sm-6 -->

    <div class="col-sm-5">
      <p><strong><%= proposal.class.human_attribute_name(:status_name) %>:</strong>&nbsp;<%= proposal.try(:status_name) %></p>
    </div> <!-- /col-sm-6 -->

  </div> <!-- /row -->


</fieldset>
<br>