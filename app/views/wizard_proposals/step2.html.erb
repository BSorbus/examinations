<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h3 class="center">
        <span class="fa fa-file-invoice glyp-index-title" aria-hidden="true"></span>
        <span class="index-title hidden-xs"><%= t 'wizard_proposals.title' %></span>
        <span class="index-title visible-xs"><%= t '.navbar' %></span>
      </h3>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->
</div> <!--/container -->

<div class="container">

  <div class="row">
    <div class="col-sm-12">

      <%= form_for @proposal_wizard, as: :proposal_wizard, url: validate_step_wizard_proposal_path do |f| %>
        <%= form_errors_for @proposal_wizard %>

        <%= hidden_field_tag :current_step, 'step2' %>

        <fieldset class="my-fieldset">
          <legend class="my-fieldset"><strong><%= t('.fieldset_title') %></strong></legend>

          <div class="row">
            <div class="form-group required col-sm-2">
              <%= f.label :address_postal_code, class: 'control-label' %>
              <%= f.text_field :address_postal_code, autofocus: true, class: 'form-control input-sm', disabled: false %>
            </div>
            <div class="form-group required col-sm-4">
              <%= f.label :address_city, class: 'control-label' %>
              <%= f.text_field :address_city, class: 'form-control input-sm', disabled: false %>
            </div>
          </div> <!--/row -->

          <div class="row">
            <div class="form-group col-sm-4">
              <%= f.label :address_street, class: 'control-label' %>
              <%= f.text_field :address_street, class: 'form-control input-sm', disabled: false %>
            </div>

            <div class="form-group required col-sm-2">
              <%= f.label :address_house, class: 'control-label' %>
              <%= f.text_field :address_house, class: 'form-control input-sm', disabled: false %>
            </div>

            <div class="form-group col-sm-2">
              <%= f.label :address_number, class: 'control-label' %>
              <%= f.text_field :address_number, class: 'form-control input-sm', disabled: false %>
            </div>
          </div> <!--/row -->


          <div class="row">
            <div class="form-group col-sm-12">
              <hr class="hr-without-top-margin">
              <%= f.submit t('.submit'), class: 'btn btn-primary' %>
            </div>
          </div> <!--/row -->
        </fieldset>

      <% end %>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->

  <div class="row">
    <div class="col-sm-12">
      <ol class="breadcrumb">
        <li><%= link_to t('wizard_proposals.step1.fieldset_title'), step1_wizard_proposal_path %></li>
        <li class="active"><%= t('wizard_proposals.step2.fieldset_title') %></li>
        <li><%= t('wizard_proposals.step3.fieldset_title') %></li>
        <li><%= t('wizard_proposals.step4.fieldset_title') %></li>
        <li><%= t('wizard_proposals.step5.fieldset_title') %></li>
      </ol>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->

</div> <!--/container -->
